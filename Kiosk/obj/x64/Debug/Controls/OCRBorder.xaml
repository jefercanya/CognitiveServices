<UserControl x:ConnectionId='1'
    x:Class="IntelligentKioskSample.Controls.OCRBorder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IntelligentKioskSample.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="userControl"
    >

    <Grid x:ConnectionId='2' x:Name="hostGrid" >
        <Polygon x:ConnectionId='3' x:Name="borderRectangle" Stroke="Red" Fill="Yellow" Opacity="0.9" HorizontalAlignment="Left" VerticalAlignment="Top" />

        <Border x:ConnectionId='4' x:Name="captionBorder"                                   
                FlowDirection="LeftToRight" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Viewbox x:ConnectionId='5' x:Name="captionViewBox" Stretch="Uniform">
                <TextBlock x:ConnectionId='6' x:Name="captionText" Foreground="Red" Opacity="0.6"
                       VerticalAlignment="Center" HorizontalAlignment="Left" FontFamily="Segoe UI Semilight"/>
            </Viewbox>
        </Border>
    </Grid>

</UserControl>

