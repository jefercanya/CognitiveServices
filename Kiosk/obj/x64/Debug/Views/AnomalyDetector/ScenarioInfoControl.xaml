<UserControl x:ConnectionId='1'
    x:Class="IntelligentKioskSample.Views.AnomalyDetector.ScenarioInfoControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <ScrollViewer HorizontalScrollMode="Disabled">
        <Grid RowSpacing="12" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Image x:ConnectionId='2'                               Width="Auto"/>
            <TextBlock x:ConnectionId='3' Grid.Row="1"                       Style="{StaticResource TitleTextBlockStyle}" Opacity="0.8"/>
            <TextBlock x:ConnectionId='4' Grid.Row="2"                             Style="{StaticResource BodyTextBlockStyle}" Opacity="0.8"/>
        </Grid>
    </ScrollViewer>
</UserControl>

